#!/usr/bin/env python3

import logging
import sys

from swh.loader.git import BulkLoader

ADDITIONAL_CONFIG = {
    'repo_path': ('str', None),

    'origin_url': ('str', 'file:///dev/null'),
    'authority': ('str', '5f4d4c51-498a-4e28-88b3-b3e4e8396cba'),
    'validity': ('str', '2015-01-01 00:00:00+00'),
}

my_config = BulkLoader.parse_config_file(
    config_filename=sys.argv[1], additional_configs=[ADDITIONAL_CONFIG])

logging.basicConfig(
    level=logging.DEBUG,
    format='%(asctime)s %(name)s %(levelname)s %(message)s',
    handlers=[
        logging.StreamHandler(),
    ],
)

requests_log = logging.getLogger("requests")
requests_log.setLevel(logging.CRITICAL)

loader = BulkLoader(my_config)
loader.process(my_config['repo_path'],
               my_config['origin_url'],
               my_config['authority'],
               my_config['validity'])
